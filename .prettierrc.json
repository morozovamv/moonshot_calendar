{
	"bracketSpacing": true,
	"jsxBracketSameLine": true,
	"parser": "typescript",
	"printWidth": 120,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.html"],
			"options": { "parser": "html" }
		},
		{
			"files": ["*.css"],
			"options": { "parser": "css" }
		},
		{
			"files": ["*.json"],
			"options": { "parser": "json" }
		},
		{
			"files": ["*.md"],
			"options": { "parser": "mdx" }
		}
	]
}
